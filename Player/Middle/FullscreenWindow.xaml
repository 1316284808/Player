<Window x:Class="Player.Middle.FullscreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        xmlns:local="clr-namespace:Player.Middle"
        WindowStyle="None"
        WindowState="Maximized" 
         xmlns:bottom="clr-namespace:Player.Bottom"
        Topmost="True"
        Background="Black"
        Loaded="Window_Loaded"
        Focusable="True"
        ShowInTaskbar="False"
        ContentRendered="Window_ContentRendered"> 
        <vlc:VideoView x:Name="video" 
                       HorizontalAlignment="Stretch" 
                       VerticalAlignment="Stretch">
            <Grid>
                <!-- 点击覆盖层，覆盖整个视频区域 -->
                <Grid x:Name="ClickOverlay" MouseLeftButtonDown="ClickOverlay_MouseLeftButtonDown" 
                      Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <!-- 全屏控制栏 -->
                <local:FullscreenControl x:Name="fullscreenControl" HorizontalAlignment="Stretch" Width="900" Height="auto" VerticalAlignment="Bottom"/>
            </Grid>
        </vlc:VideoView >
</Window>