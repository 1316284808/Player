<UserControl x:Class="Player.Middle.MiddleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Player.Middle"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="*"></RowDefinition>
            
        </Grid.RowDefinitions>
        <Border CornerRadius="8"   
     Background="Black"
     
     Margin="10" Opacity="0.95"
     ClipToBounds="True">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="Black" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <!-- 视频容器 - 使用ContentControl作为动态内容容器 -->
                <Border CornerRadius="8" Background="black" Padding="0" ClipToBounds="True" 
                BorderBrush="black" BorderThickness="2" Panel.ZIndex="1">
                    <ContentControl x:Name="PlayerHost"
                            Background="Black"
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch" 
                            TabIndex="2147483645"
                            Panel.ZIndex="0"/>
                </Border>
                
                <!-- 过渡用黑色覆盖层 - 用于尺寸变化时防止白屏 -->
                <Border x:Name="TransitionOverlay" 
                    Background="Black" 
                    Visibility="Collapsed" 
                    Panel.ZIndex="10" 
                    CornerRadius="8" 
                    ClipToBounds="True"/>
            </Grid>
        </Border>
    </Grid>
   
</UserControl>