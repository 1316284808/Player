<UserControl x:Class="Player.Left.LeftControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Player.Left" 
             xmlns:viewModels="clr-namespace:Player.ViewModels"
             xmlns:helpers="clr-namespace:Player.Helpers"
             xmlns:coreHelpers="clr-namespace:Player.Core.Helpers;assembly=Player.Core"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=viewModels:LeftViewModel, IsDesignTimeCreatable=True}">
    
    <UserControl.Resources>
        <!-- 布尔值到图标的转换器 -->
        <local:BoolToIconConverter x:Key="BoolToIconConverter" />
        <!-- 布尔值到工具提示的转换器 -->
        <local:BoolToTooltipConverter x:Key="BoolToTooltipConverter" />
        <!-- 布尔值到宽度的转换器 -->
        <local:BoolToWidthConverter x:Key="BoolToWidthConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧边栏 -->
        <Grid Grid.Column="0" Width="50">
            <Border Background="{DynamicResource SecondaryBrush}" Width="50">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2"   Opacity="0.1"/>
                </Border.Effect>

                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5">
                    <!-- 折叠按钮 -->
                    <Button x:Name="CollapseButton" Margin="2" Style="{StaticResource PlayerIconButton}" 
                            ToolTip="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToTooltipConverter}}"
                            HorizontalAlignment="Center"
                            Command="{Binding ToggleSidebarCommand}" Cursor="Hand">
                        <coreHelpers:CustomIcon x:Name="CollapseIcon" Kind="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToIconConverter}}" Foreground="{DynamicResource PrimaryBrush}" Width="28" Height="28"/>
                    </Button>
                    
                    <!-- 设置按钮 -->
                    <Button x:Name="SettingsButton" Margin="2" Style="{StaticResource PlayerIconButton}" ToolTip="设置" HorizontalAlignment="Center" Command="{Binding OpenSettingsCommand}">
                        <coreHelpers:CustomIcon Kind="Settings" Foreground="{DynamicResource PrimaryBrush}" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- 右侧内容区域 -->
        <Border x:Name="ContentBorder" CornerRadius="8" Grid.Column="1" Style="{StaticResource PlayerControlsContainer}"
                Width="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToWidthConverter}}" 
                Margin="0,0,10,0"
                HorizontalAlignment="Stretch">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="Black" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="7*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                
                <!-- 播放列表区域 -->
                <Border Grid.Row="0"  >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 播放列表标题 -->
                            <Grid>
                                <TextBlock Text="播放列表" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryBrush}" VerticalAlignment="Center"
                                          Cursor="Hand"/>
                                <Button Margin="1" Style="{StaticResource PlayerIconButton}" Width="35" Height="35" ToolTip="添加文件夹" HorizontalAlignment="Right"
                                        Command="{Binding OpenFolderCommand}">
                                    <coreHelpers:CustomIcon Kind="FolderPlus" Foreground="{DynamicResource PrimaryBrush}" Width="18" Height="18"/>
                                </Button>
                            </Grid>
                        <!-- 分隔线 -->
                        <Border Grid.Row="1" Background="{DynamicResource SecondaryDarkBrush}" Height="1" Margin="0 0 0 0"/>

                        <!-- 播放列表 -->
                        <ListBox x:Name="PlaylistListBox" 
                                 Grid.Row="2" 
                                 ItemsSource="{Binding CurrentHistoryFiles}" 
                                 SelectedItem="{Binding SelectedMediaItem, Mode=TwoWay}" 
                                 Style="{StaticResource PlayerListBox}">
                            <!-- 子项模板 -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <!-- 使用新的ListBoxItemButton样式 -->
                                    <Button Command="{Binding DataContext.SelectMediaCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                            CommandParameter="{Binding}"
                                            Content="{Binding Name}"
                                            Style="{StaticResource ListBoxItemButton}"
                                            ToolTip="{Binding Name}">
                                    </Button>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
                
                <!-- 历史记录区域 -->
                <Border Grid.Row="1" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="1"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 历史记录标题 --> 
                            <TextBlock Text="历史记录" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryBrush}"/>
                          
                        <!-- 分隔线 -->
                        <Border Grid.Row="1" Background="{DynamicResource SecondaryDarkBrush}" Height="1" Margin="0 0 0 0"/>
                        
                        <!-- 历史记录列表 -->
                        <ListBox x:Name="HistoryListBox"
                                 Grid.Row="2"
                                 ItemsSource="{Binding HistoryDates}"
                                 SelectedItem="{Binding SelectedHistoryDate}"
                                 Style="{StaticResource PlayerListBox}">
                            
                            <!-- 子项模板 -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <!-- 使用新的ListBoxItemButton样式 -->
                                    <Button Command="{Binding DataContext.ShowHistoryByDateAsyncCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                            CommandParameter="{Binding}"
                                            Content="{Binding}"
                                            Style="{StaticResource ListBoxItemButton}"
                                            ToolTip="{Binding}">
                                    </Button>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                          </ListBox>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>