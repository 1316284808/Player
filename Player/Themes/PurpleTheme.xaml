<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 紫罗兰主题色 #7B68EE -->
    
    <!-- 主要颜色 -->
    <Color x:Key="PrimaryColor">#7B68EE</Color>
    <Color x:Key="PrimaryLightColor">#9D8DFF</Color>
    <Color x:Key="PrimaryDarkColor">#5E4CC4</Color>
    
    <!-- 次要颜色 -->
    <Color x:Key="SecondaryColor">#E6E6FA</Color>
    <Color x:Key="SecondaryLightColor">#F5F5FF</Color>
    <Color x:Key="SecondaryDarkColor">#D8BFD8</Color>
    
    <!-- 强调色 -->
    <Color x:Key="AccentColor">#9370DB</Color>
    
    <!-- 画刷 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    
    <!-- 窗口背景色：固定为灰白色，不随主题变化 -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="#F8F8F8"/>
    
    <!-- 按钮样式 -->
    <Style x:Key="ThemeButton" TargetType="Button" BasedOn="{StaticResource PlayerMainButton}"/>
    
    <!-- 图标按钮样式 -->
    <Style x:Key="ThemeIconButton" TargetType="Button" BasedOn="{StaticResource PlayerIconButton}"/>
    
    <!-- 滑块样式 -->
    <Style x:Key="ThemeSlider" TargetType="Slider" BasedOn="{StaticResource PlayerSlider}"/>
    
    <!-- 下拉列表样式 -->
    <Style x:Key="ThemeComboBox" TargetType="ComboBox" BasedOn="{StaticResource PlayerComboBox}"/>
    
    <!-- ListBox项目选中样式 -->
    <SolidColorBrush x:Key="ListBoxItemSelectedBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="ListBoxItemSelectedBorder" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="ListBoxItemHoverBackground" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="ListBoxItemHoverBorder" Color="{StaticResource AccentColor}"/>
    
    <!-- 滚动条样式 -->
    <SolidColorBrush x:Key="ScrollBarThumbDefault" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="ScrollBarThumbHover" Color="{StaticResource PrimaryColor}"/>
    
</ResourceDictionary>
