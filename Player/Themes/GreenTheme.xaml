<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 绿色主题 #4CAF50 -->
    
    <!-- 主要颜色 -->
    <Color x:Key="PrimaryColor">#4CAF50</Color>
    <Color x:Key="PrimaryLightColor">#81C784</Color>
    <Color x:Key="PrimaryDarkColor">#388E3C</Color>
    
    <!-- 次要颜色 -->
    <Color x:Key="SecondaryColor">#E8F5E9</Color>
    <Color x:Key="SecondaryLightColor">#F1F8F2</Color>
    <Color x:Key="SecondaryDarkColor">#C8E6C9</Color>
    
    <!-- 强调色 -->
    <Color x:Key="AccentColor">#66BB6A</Color>
    
    <!-- 画刷 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="SecondaryLightBrush" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource SecondaryDarkColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    
    <!-- 窗口背景色：固定为灰白色，不随主题变化 -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="BackgroundMediumBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="#F8F8F8"/>
    
    <!-- 按钮样式 -->
    <Style x:Key="ThemeButton" TargetType="Button" BasedOn="{StaticResource CustomRaisedButton}"/>
    
    <!-- 图标按钮样式 -->
    <Style x:Key="ThemeIconButton" TargetType="Button" BasedOn="{StaticResource CustomIconButton}"/>
    
    <!-- 滑块样式 -->
    <Style x:Key="ThemeSlider" TargetType="Slider" BasedOn="{StaticResource CustomSlider}"/>
    
    <!-- 下拉列表样式 -->
    <Style x:Key="ThemeComboBox" TargetType="ComboBox" BasedOn="{StaticResource CustomComboBox}"/>
    
    <!-- 切换按钮样式 -->
    <Style x:Key="ThemeToggleButton" TargetType="ToggleButton" BasedOn="{StaticResource CustomToggleButton}"/>
    
    <!-- ListBox项目选中样式 -->
    <SolidColorBrush x:Key="ListBoxItemSelectedBackground" Color="{StaticResource SecondaryColor}"/>
    <SolidColorBrush x:Key="ListBoxItemSelectedBorder" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="ListBoxItemHoverBackground" Color="{StaticResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="ListBoxItemHoverBorder" Color="{StaticResource AccentColor}"/>
    
    <!-- 滚动条样式 -->
    <SolidColorBrush x:Key="ScrollBarThumbDefault" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="ScrollBarThumbHover" Color="{StaticResource PrimaryColor}"/>
    
</ResourceDictionary>
