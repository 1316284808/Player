<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 覆盖MaterialDesignThemes的默认颜色 -->
    
    <!-- 主要颜色覆盖 -->
    <SolidColorBrush x:Key="MaterialDesignBody" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="{DynamicResource SecondaryLightColor}"/>
    <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="{DynamicResource SecondaryLightColor}"/>
    
    <!-- 按钮颜色覆盖 -->
    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="{DynamicResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="{DynamicResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="{DynamicResource PrimaryDarkColor}"/>
    
    <!-- 文本颜色覆盖 -->
    <SolidColorBrush x:Key="MaterialDesignBodyLight" Color="{DynamicResource PrimaryColor}"/>
    
    <SolidColorBrush x:Key="MaterialDesignBodyDark" Color="{DynamicResource PrimaryDarkColor}"/>
    
    <!-- 图标颜色覆盖 -->
    <SolidColorBrush x:Key="MaterialDesignIcon" Color="{DynamicResource PrimaryColor}"/>
    
    <!-- 滑块样式覆盖 -->
    <Style x:Key="MaterialDesignSlider" TargetType="Slider">
        <Setter Property="Background" Value="{DynamicResource SecondaryLightBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Thumb.Background" Value="{DynamicResource PrimaryBrush}"/>
    </Style>
    
    <!-- 按钮样式覆盖 -->
    <Style x:Key="MaterialDesignRaisedButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryDarkBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource PrimaryLightBrush}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource PrimaryDarkBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="MaterialDesignIconButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource SecondaryLightBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryLightBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- 切换按钮样式覆盖 -->
    <Style x:Key="MaterialDesignSwitchToggleButton" TargetType="ToggleButton">
        <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- 下拉列表样式覆盖 -->
    <Style x:Key="MaterialDesignComboBox" TargetType="ComboBox">
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource SecondaryLightBrush}"/>
    </Style>
    
</ResourceDictionary>